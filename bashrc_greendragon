# .bashrc
# AH 7/16/2014 for GreenDragon

# User specific aliases and functions

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

export HISTCONTROL='ignoredups'
export EDITOR='emacs'

# -- alias -- #
alias e='emacs -nw'
er() {
    emacs "$1" --eval '(setq buffer-read-only t)'
}
alias jobs='jobs -l'


# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
fi

# some more ls aliases
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lst='ls -trhl --color=auto'
alias grep='grep -i --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias echo='echo -e'
alias mkdir='mkdir -p'
alias rsync='rsync -avz --progress'
alias rsyncd='rsync -avz --progress --delete'
alias rsynce='rsync -avz --progress --existing'
alias rsynci='rsync -avzi'
alias whereami='echo $HOSTNAME'

# -- safety first -- #
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias killall='killall -i'

# -- colors -- #
BLACK='\[\e[0m\]'
RED='\[\e[0;31m\]'
GREEN='\[\e[0;32m\]'
YELLOW='\[\e[0;33m\]'
BLUE='\[\e[0;34m\]'
VIOLET='\[\e[0;35m\]'
CYAN='\[\e[0;36m\]'
GRAY='\[\e[0;37m\]'

# -- Bash prompt and title
PS1="$VIOLET[\j] $BLUE\w $BLACK"
PS1="\[\e]2;\u@\h\a\]$PS1"

